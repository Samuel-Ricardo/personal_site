{
  "name": "personal_website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:clean": "npm run code:ci && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "eslint --fix --cache **/*.{js,jsx,ts,tsx}",
    "format:verify": "prettier --check --ignore-path .gitignore ./src/**/*.{js,jsx,ts,tsx}",
    "format:fix": "prettier --write --ignore-path .gitignore ./src/**/*.{js,jsx,ts,tsx}",
    "husky:prepare": "cd ../ && husky install",
    "test": "jest --passWithNoTests --color",
    "test:coverage": "jest --coverage --passWithNoTests --color",
    "test:watch": "jest --watchAll --coverage --passWithNoTests --color",
    "test:staged": "jest --passWithNoTests --color --findRelatedTests",
    "test:E2E": "cypress run",
    "test:cypress": "cypress open",
    "code:ci": "npm run format:fix && npm run lint && npm run test:coverage"
  },
  "dependencies": {
    "@emailjs/browser": "^4.3.1",
    "@sanity/cli": "^3.25.0",
    "@sanity/image-url": "^1.0.2",
    "@sanity/vision": "^3.25.0",
    "@testing-library/jest-dom": "^6.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.3",
    "inversify": "^6.0.2",
    "inversify-inject-decorators": "^3.1.0",
    "lucide-react": "^0.312.0",
    "next": "14.1.0",
    "next-mdx-remote": "^4.4.1",
    "next-sanity": "^7.0.12",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^14.0.5",
    "reflect-metadata": "^0.2.1",
    "sanity": "^3.25.0",
    "sass": "^1.70.0",
    "styled-components": "^6.1.8",
    "tailwind-merge": "^2.2.0",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cypress": "^13.6.3",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
